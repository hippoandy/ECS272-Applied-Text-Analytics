            <tr style="height: 0;">
                <td><div class="text-white" style="font-size: 40px;"><i class="fa fa-briefcase" aria-hidden="true"></i></div></td>
                <td width="50%" align="left"><div id="sider-name" width="100%" class="text-white"></div></td>
